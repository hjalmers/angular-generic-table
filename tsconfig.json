{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"module": "es2015",
		"baseUrl": "./",
		"paths": {
			"core": ["dist/core"],
			"core/*": ["dist/core/*"],
			"column-settings": ["dist/column-settings"],
			"column-settings/*": ["dist/column-settings/*"]
		}
	}
}
